@page
@using System.Security.Claims
@using exam_frontend.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    string ApiUrl = $"Posts/feed?userId={User.FindFirstValue("nameid")}";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minipin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/gallery/details.css?v=@DateTime.Now.Ticks"/>
</head>

<main class="container mx-auto px-4 mt-6">
        <component type="typeof(PinGrid)" 
                   param-IsViewOnly="true"
                   param-ApiUrl="@ApiUrl"
                   render-mode="Server"/>

</main>
