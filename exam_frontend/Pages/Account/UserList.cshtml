@page
@model exam_frontend.Pages.Account.UserList

@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Followers | Minipin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .profile-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .tab-active {
            border-bottom: 3px solid #facc15;
            color: #000;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
<!-- Profile Header -->
<div class="container mx-auto px-4 py-6">
    <div class="flex items-center mb-6">
        <div class="w-20 h-20 bg-gray-300 rounded-full mr-4"></div>
        <div>
            <h1 class="text-2xl font-bold text-gray-800">@Model.Model.Username</h1>
        </div>
    </div>

    <!-- Stats -->
    <div class="flex justify-around border-y border-gray-200 py-4 mb-6">
        <div class="text-center">
            <p class="text-2xl font-bold">@Model.Model.FollowerCount</p>
            <p class="text-gray-600">Followers</p>
        </div>
        <div class="text-center">
            <p class="text-2xl font-bold">@Model.Model.FollowingCount</p>
            <p class="text-gray-600">Following</p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="flex border-b border-gray-200 mb-6">
        <button class="@Model.GetTabClass(true)" onclick="setTab(true)">Followers</button>
        <button class="@Model.GetTabClass(false)" onclick="setTab(false)">Following</button>
    </div>

    <component type="typeof(Components.UserList)"
               render-mode="Server"
               param-Title="@(Model.ShowFollowers ? "Followers" : "Following")"
               param-Users="@(Model.ShowFollowers ? Model.Model.Followers : Model.Model.Following)" />
</div>
<script>
    function setTab(showFollowers) {
        fetch(`/Account/UserList?handler=SetTab&showFollowers=${showFollowers}`, { method: 'POST' })
            .then(() => location.reload());
    }
</script>
</body>
</html>