@page
@model exam_admin.Pages.ImagesModel

@{
    ViewData["Title"] = "Image Moderation";
}

<h1>Image Moderation</h1>

<table class="table">
    <thead>
    <tr>
        <th>Image Name</th>
        <th>Upload Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var image in Model.Images)
    {
        <tr>
            <td>@image.ObjectName</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@image.Id" onsubmit="return confirm('Are you sure you want to delete this image?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>